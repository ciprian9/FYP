<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.MainActivity">

    <Button
        android:id="@+id/walkingOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnWalking" />

    <Button
        android:id="@+id/runningOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walkingOptions"
        android:text="@string/btnRunning" />

    <Button
        android:id="@+id/cyclingOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/runningOptions"
        android:text="@string/btnCycling" />

    <Button
        android:id="@+id/drivingOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cyclingOptions"
        android:text="@string/btnDriving" />

    <Button
        android:id="@+id/btnTestDriving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drivingOptions"
        android:text="@string/btnTestDriving"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnTestWalking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTestDriving"
        android:text="@string/btnTestWalking"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnTestCycling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTestWalking"
        android:text="@string/btnTestCycling"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnTestRunning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTestCycling"
        android:text="@string/btnTestRunning"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTestRunning"
        android:text="@string/btnStop"
        android:visibility="gone" />

</RelativeLayout>