<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.MainActivity"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/walkingOptions"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/imagebutton_border"
        android:src="@drawable/walkingclipart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24000001" />

    <ImageButton
        android:id="@+id/runningOptions"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/imagebutton_border"
        android:src="@drawable/runningclipart"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24000001" />

    <ImageButton
        android:id="@+id/drivingOptions"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/imagebutton_border"
        android:src="@drawable/drivingclipart"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <ImageButton
        android:id="@+id/cyclingOptions"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/imagebutton_border"
        android:src="@drawable/cyclingclipart"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/btnTestWalking"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="179dp"
        android:text="@string/btnTestWalking"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drivingOptions"
        app:layout_constraintVertical_bias="0.85" />

    <Button
        android:id="@+id/btnTestRunning"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="144dp"
        android:text="@string/btnTestRunning"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTestWalking" />

    <Button
        android:id="@+id/btnTestDriving"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="72dp"
        android:text="@string/btnTestDriving"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTestCycling" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btnStop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTestDriving" />

    <Button
        android:id="@+id/btnTestCycling"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="108dp"
        android:text="@string/btnTestCycling"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTestRunning" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="25dp"
        android:text="Preferences"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/walkingOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>