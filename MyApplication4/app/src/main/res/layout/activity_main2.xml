<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.MainActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/walkingOptions"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/walkingclipart"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243" />

    <Button
        android:id="@+id/runningOptions"
        android:layout_width="105dp"
        android:layout_height="97dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/runningclipart"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.621"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <Button
        android:id="@+id/drivingOptions"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/drivingclipart"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.621"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/cyclingOptions"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/cyclingclipart"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/btnTestWalking"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="179dp"
        android:text="@string/btnTestWalking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drivingOptions" />

    <Button
        android:id="@+id/btnTestRunning"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="144dp"
        android:text="@string/btnTestRunning"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTestWalking" />

    <Button
        android:id="@+id/btnTestDriving"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="72dp"
        android:text="@string/btnTestDriving"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTestCycling" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:text="@string/btnStop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTestDriving" />

    <Button
        android:id="@+id/btnTestCycling"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="108dp"
        android:text="@string/btnTestCycling"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/btnTestRunning" />
</android.support.constraint.ConstraintLayout>